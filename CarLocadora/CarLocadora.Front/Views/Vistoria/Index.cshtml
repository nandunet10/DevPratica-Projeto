@model IEnumerable<CarLocadora.Modelo.Modelos.VistoriasModel>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-2">
        <p>
            <a asp-action="Create" class="btn btn-success">Novo</a>
        </p>
    </div>
    <div class="col-md-7">
        <h3 style="text-align: center">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-calendar-week" viewBox="0 0 16 16">
                <path d="M11 6.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1zm-3 0a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1zm-5 3a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1zm3 0a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1z" />
                <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z" />
            </svg> Vistorias
        </h3>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocacaoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KmSaida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CombustivelSaida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ObservacaoSaida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataHoraRetiradaPatio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KmEntrada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CombustivelEntrada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ObservacaoEntrada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataHoraDevolucaoPatio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataInclusao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataAlteracao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LocacaoId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KmSaida)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CombustivelSaida)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ObservacaoSaida)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataHoraRetiradaPatio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KmEntrada)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CombustivelEntrada)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ObservacaoEntrada)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataHoraDevolucaoPatio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataInclusao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataAlteracao)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new {  id=item.Id  }, new {@class = "btn btn-warning"})
                </td>
            </tr>
        }
    </tbody>
</table>
