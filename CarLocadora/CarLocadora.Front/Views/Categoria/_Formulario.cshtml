@model CarLocadora.Modelo.Modelos.CategoriaModel


<hr />
<div>

    <div class="col-md-5">
        <div class="form-group">
            <label asp-for="Descricao" class="control-label"></label>
            <input asp-for="Descricao" class="form-control" />
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-5">
        <div class="form-group">
            <label asp-for="ValorDiaria" class="control-label">Valor diária</label>
            <input asp-for="ValorDiaria" class="form-control" maskValor/>
            <span asp-validation-for="ValorDiaria" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="col-md-2">
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
            </label>
        </div>
    </div>
</div>

<hr />
<div class="row">
    <div class="col-md-1">
        <div>
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
        </div>
    </div>
    <div class="col-md-1">
        <div class="form-group">
            <input type="submit" value="Salvar" class="btn btn-primary" />
        </div>
    </div>
</div>